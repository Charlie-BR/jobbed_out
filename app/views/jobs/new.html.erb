<% if @job.errors.present? %>
  <p><%= @job.errors.full_messages.first %></p>
<% end %>

<%= form_for @job do |f| %>
  <%= f.text_field :title, :placeholder => "Title" %>
  <%= f.text_field :post_url, :placeholder => "Path" %>
  <%= f.text_field :user, :placeholder => "Username" %>
  <%= f.submit "Submit" %>
<% end %>